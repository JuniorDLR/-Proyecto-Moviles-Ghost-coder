<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"

    tools:context=".Menu">

    <TextView
        android:id="@+id/tvMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:text="Mis Clases"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        />

    <Button

        android:id="@+id/btnHorario"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnApuntes"
        />

    <Button
        android:id="@+id/btnApuntes"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/btnHorario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Contactos"

        />

    <Button
        android:id="@+id/Contactos"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/btnApuntes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnRecursosAdicionales"
        />

    <Button
        android:id="@+id/btnRecursosAdicionales"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/Contactos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>